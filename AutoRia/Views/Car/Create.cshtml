@model DataAccess.Data.Entities.Cars;

<h1>Create Car</h1>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-12">
        <label asp-for="Brand" class="form-label">Brand</label>
        <input asp-for="Brand" type="text" class="form-control" placeholder="Mercedes-Benz">
        <span asp-validation-for="Brand" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="Model" class="form-label">Model</label>
        <input asp-for="Model" type="text" class="form-control" placeholder="E-200">
        <span asp-validation-for="Model" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" type="text" class="form-control" placeholder="+38">
        <span asp-validation-for="Phone" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="Engine" class="form-label">Engine(litres)</label>
        <input asp-for="Engine" type="number" class="form-control" placeholder="3.5">
        <span asp-validation-for="Engine" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="State_number" class="form-label">State Number</label>
        <input asp-for="State_number" type="text" class="form-control" placeholder="VK0000II">
        <span asp-validation-for="State_number" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="Color" class="form-label">Color</label>
        <input asp-for="Color" type="color" class="form-control" placeholder="Green">
        <span asp-validation-for="Color" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="number" class="form-control" placeholder="$">
        <span asp-validation-for="Price" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Year" class="form-label">Year</label>
        <input asp-for="Year" type="number" class="form-control" placeholder="2023">
        <span asp-validation-for="Year" class="form-text text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
            <option disabled selected>Choose category...</option>
        </select>
    </div>
    <div class="form-check">
        <input asp-for="IsUsed" class="form-check-input" type="checkbox">
        <label asp-for="IsUsed" class="form-check-label">New</label>
    </div>
    <div class="col-md-12">
        <label asp-for="Mail" class="form-label">Email</label>
        <input asp-for="Mail" type="email" class="form-control" placeholder="some@mail.com">
        <span asp-validation-for="Mail" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" type="text" class="form-control" placeholder="https//">
        <span asp-validation-for="ImageUrl" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="City" class="form-label">City</label>
        <input asp-for="City" type="text" class="form-control" placeholder="Rivne">
        <span asp-validation-for="City" class="form-text text-danger"></span>
    </div>
    <div class="col-12 mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="..."></textarea>
        <span asp-validation-for="Description" class="form-text text-danger"></span>
    </div>
    <div class="col-6">
        <a asp-action="Index" class="btn btn-dark w-100">Back</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-success w-100">Create</button>
    </div>
</form>